<UserControl x:Class="_15ContactsApp.Controls.UsrControlContact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_15ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="700">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock x:Name="txtBlockName" Text="{Binding Name}" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:Name="txtBlockEmail" Text="{Binding Email}" FontSize="20" Foreground="DodgerBlue"/>
            <TextBlock x:Name="txtBlockPhone" Text="{Binding Phone}" FontSize="20" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
